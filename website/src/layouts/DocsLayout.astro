---
import DocsShell from '../components/DocsShell';
import '../styles/global.css';

interface NavItem {
  slug: string;
  label: string;
}

interface Props {
  navItems?: NavItem[];
  currentSlug?: string;
}

const { navItems = [], currentSlug = '' } = Astro.props as Props;
---
<DocsShell client:load navItems={navItems} currentSlug={currentSlug}>
  <slot />
</DocsShell>

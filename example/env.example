# S.E.O. Demo Environment Configuration
# Copy to .env and configure for your Supabase project

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Demo Control Toggles
CHAOS_MODE=off                    # Enable live migrations by demo users
DEMO_ROLE_SWITCHING=on           # Allow live role switching in UI
SCORE_DECAY=0.90                 # Bandwidth decay rate (0.90 = gradual, 0.70 = aggressive)
BIRTHDAY_TURBO=on                # Enable The Birthday Experienceâ„¢
PUBLIC_SHAME_FEED=on             # Enable delegation broadcast feed

# Performance Tuning
ACTIVITY_WINDOW_MINUTES=5        # Rolling window for bandwidth calculation
MIGRATION_COOLDOWN_SECONDS=60    # Minimum time between chaos migrations
MAX_CONCURRENT_MIGRATIONS=1      # Advisory lock limit

# Security
MIGRATION_STATEMENT_TIMEOUT=10000 # 10 seconds max per statement
MIGRATION_LOCK_TIMEOUT=2000      # 2 seconds max wait for locks
MAX_MIGRATION_OPS_PER_REQUEST=5  # Limit operations per migration

# Demo Data
DEMO_ORG_ID=demo_org             # Single org for all demo users
DEMO_COMPANY_NAME=WorkVybez      # Company name shown in UI
DEMO_MAX_EMPLOYEES=200           # Max concurrent demo users

# Audit & Observability  
AUDIT_RETENTION_DAYS=7           # Keep migration audit logs
REALTIME_BROADCAST_THROTTLE=100  # Max events per second per channel
LOG_LEVEL=info                   # debug|info|warn|error

# Rate Limiting
BANDWIDTH_UPDATES_PER_MINUTE=60  # Max activity events per user
TOUCHPOINT_MESSAGES_PER_HOUR=100 # Max chat messages per user
CHAOS_SUBMISSIONS_PER_USER=3     # Max migrations per user per day
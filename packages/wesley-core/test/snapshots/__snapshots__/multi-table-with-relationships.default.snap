export interface User {
  id: string;
  /** @unique - Must be unique */
  email: string;
  profile?: Record<string, any> | null;
}
export interface Post {
  id: string;
  /** @indexed - Database index exists */
  title: string;
  /** @sensitive - Contains sensitive data */
  content?: string | null;
  authorId: string;
  publishedAt?: Date | null;
  /** @default 0 */
  viewCount: number;
}
export interface Comment {
  id: string;
  content: string;
  postId: string;
  authorId: string;
  /** @default now() */
  createdAt: Date;
}

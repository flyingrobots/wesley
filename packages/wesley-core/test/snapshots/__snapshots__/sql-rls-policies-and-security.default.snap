CREATE TABLE IF NOT EXISTS "organizations" (
  "id" uuid NOT NULL,
  "name" text NOT NULL,
  "owner_id" uuid NOT NULL,
  PRIMARY KEY ("id")
);
COMMENT ON TABLE "organizations" IS 'uid: tbl:Organization';
COMMENT ON COLUMN "organizations"."id" IS 'uid: col_organizations_id';
COMMENT ON COLUMN "organizations"."name" IS 'uid: col_organizations_name';
COMMENT ON COLUMN "organizations"."owner_id" IS 'uid: col_organizations_owner_id';
CREATE TABLE IF NOT EXISTS "documents" (
  "id" uuid NOT NULL,
  "title" text NOT NULL,
  "content" text,
  "org_id" uuid NOT NULL,
  "created_by" uuid NOT NULL,
  PRIMARY KEY ("id"),
  FOREIGN KEY ("org_id") REFERENCES "organizations"("id") ON DELETE NO ACTION
);
COMMENT ON TABLE "documents" IS 'uid: tbl:Document';
COMMENT ON COLUMN "documents"."id" IS 'uid: col_documents_id';
COMMENT ON COLUMN "documents"."title" IS 'uid: col_documents_title';
COMMENT ON COLUMN "documents"."content" IS 'uid: col_documents_content';
COMMENT ON COLUMN "documents"."org_id" IS 'uid: col_documents_org_id';
COMMENT ON COLUMN "documents"."created_by" IS 'uid: col_documents_created_by';

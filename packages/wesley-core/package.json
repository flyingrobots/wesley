{
  "name": "@wesley/core",
  "version": "0.1.0",
  "type": "module",
  "description": "Wesley core domain logic - pure functions, no dependencies",
  "main": "./src/index.mjs",
  "exports": {
    ".": "./src/index.mjs",
    "./domain": "./src/domain/index.mjs",
    "./application": "./src/application/index.mjs",
    "./ports": "./src/ports/index.mjs",
    "./domain/qir": "./src/domain/qir/index.mjs"
  },
  "files": [
    "src/"
  ],
  "scripts": {
    "test": "node test/run-all-tests.mjs unit integration snapshots",
    "test:watch": "node test/run-all-tests.mjs --watch",
    "test:coverage": "node test/run-all-tests.mjs --coverage",
    "test:unit": "node test/run-all-tests.mjs unit",
    "test:integration": "node test/run-all-tests.mjs integration",
    "test:property": "node test/run-all-tests.mjs property",
    "test:snapshots": "node test/run-all-tests.mjs snapshots",
    "test:snapshots:update": "node test/run-all-tests.mjs snapshots --update-snapshots",
    "test:e2e": "node test/run-all-tests.mjs e2e",
    "test:parallel": "node test/run-all-tests.mjs --parallel",
    "test:sequential": "node test/run-all-tests.mjs --sequential",
    "test:bail": "node test/run-all-tests.mjs --bail",
    "lint": "eslint src/"
  },
  "engines": {
    "node": ">=18.17"
  },
  "keywords": [
    "graphql",
    "schema",
    "domain",
    "hexagonal"
  ],
  "author": "Wesley Authors <oss@flyingrobots.dev>",
  "license": "LicenseRef-MIND-UCAL-1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/flyingrobots/wesley.git",
    "directory": "packages/wesley-core"
  },
  "bugs": {
    "url": "https://github.com/flyingrobots/wesley/issues"
  },
  "homepage": "https://github.com/flyingrobots/wesley/tree/main/packages/wesley-core#readme",
  "dependencies": {
    "@supabase/pg-parser": "^0.1.3",
    "chokidar": "^4.0.3",
    "graphql": "^16.11.0",
    "ts-morph": "^27.0.2"
  },
  "devDependencies": {
    "fast-check": "^4.3.0"
  }
}

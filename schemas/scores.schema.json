{
  "$id": "https://wesley.dev/schema/scores-2.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Wesley Scores v2",
  "type": "object",
  "required": ["version", "commit", "timestamp", "scores", "breakdown", "readiness", "metadata"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^2\\.[0-9]+\\.[0-9]+$"
    },
    "commit": {
      "type": "string",
      "minLength": 7
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "scores": {
      "type": "object",
      "required": ["scs", "tci", "mri"],
      "properties": {
        "scs": { "type": "number", "minimum": 0, "maximum": 1 },
        "tci": { "type": "number", "minimum": 0, "maximum": 1 },
        "mri": { "type": "number", "minimum": 0, "maximum": 1 }
      },
      "additionalProperties": false
    },
    "breakdown": {
      "type": "object",
      "required": ["scs", "tci", "mri"],
      "properties": {
        "scs": {
          "type": "object",
          "required": ["sql", "types", "validation", "tests"],
          "properties": {
            "sql":   { "$ref": "#/definitions/scsComponent" },
            "types": { "$ref": "#/definitions/scsComponent" },
            "validation": { "$ref": "#/definitions/scsComponent" },
            "tests": { "$ref": "#/definitions/scsComponent" }
          },
          "additionalProperties": false
        },
        "tci": {
          "type": "object",
          "required": ["unit_constraints", "unit_rls", "integration_relations", "e2e_ops"],
          "properties": {
            "unit_constraints": { "$ref": "#/definitions/tciComponent" },
            "unit_rls": { "$ref": "#/definitions/tciComponent" },
            "integration_relations": { "$ref": "#/definitions/tciComponent" },
            "e2e_ops": {
              "allOf": [ { "$ref": "#/definitions/tciComponent" }, { "properties": { "note": { "type": "string" } } } ]
            },
            "legacy_components": {
              "type": "object",
              "additionalProperties": true
            }
          },
          "additionalProperties": false
        },
        "mri": {
          "type": "object",
          "required": ["drops", "renames_without_uid", "add_not_null_without_default", "non_concurrent_indexes", "totalPoints"],
          "properties": {
            "drops": { "$ref": "#/definitions/mriComponent" },
            "renames_without_uid": { "$ref": "#/definitions/mriComponent" },
            "add_not_null_without_default": { "$ref": "#/definitions/mriComponent" },
            "non_concurrent_indexes": { "$ref": "#/definitions/mriComponent" },
            "totalPoints": { "type": "number" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "readiness": {
      "type": "object",
      "required": ["ready", "verdict"],
      "properties": {
        "ready": { "type": "boolean" },
        "verdict": {
          "type": "string",
          "enum": ["ELEMENTARY", "REQUIRES INVESTIGATION", "YOU SHALL NOT PASS"]
        },
        "scs": { "$ref": "#/definitions/thresholdComponent" },
        "tci": { "$ref": "#/definitions/thresholdComponent" },
        "mri": { "$ref": "#/definitions/thresholdComponent" }
      },
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "required": ["tables", "migrationSteps", "testsRun"],
      "properties": {
        "tables": { "type": "number" },
        "migrationSteps": { "type": "number" },
        "testsRun": { "type": "number" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "definitions": {
    "scsComponent": {
      "type": "object",
      "required": ["score", "earnedWeight", "totalWeight"],
      "properties": {
        "score": { "type": "number", "minimum": 0, "maximum": 1 },
        "earnedWeight": { "type": "number" },
        "totalWeight": { "type": "number" }
      },
      "additionalProperties": false
    },
    "tciComponent": {
      "type": "object",
      "required": ["score", "covered", "total"],
      "properties": {
        "score": { "type": "number", "minimum": 0, "maximum": 1 },
        "covered": { "type": "number" },
        "total": { "type": "number" }
      },
      "additionalProperties": false
    },
    "mriComponent": {
      "type": "object",
      "required": ["score", "points", "count"],
      "properties": {
        "score": { "type": "number", "minimum": 0, "maximum": 1 },
        "points": { "type": "number" },
        "count": { "type": "number" }
      },
      "additionalProperties": false
    },
    "thresholdComponent": {
      "type": "object",
      "required": ["score", "threshold", "pass"],
      "properties": {
        "score": { "type": "number" },
        "threshold": { "type": "number" },
        "pass": { "type": "boolean" }
      },
      "additionalProperties": false
    }
  }
}
